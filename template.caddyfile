{
	admin off
	persist_config off
	auto_https off
	log {
		format json
	}
	servers {
		trusted_proxies static private_ranges
	}
}

:{$PORT} {
	log {
		format json
	}

	reverse_proxy http://{HOST_PORT} {
		header_up Host {upstream_hostport}

		header_down Upgrade-Insecure-Requests "1"
		header_down Content-Security-Policy "upgrade-insecure-requests"
	}
}